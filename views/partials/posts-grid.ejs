<div class="album py-5 bg-body-tertiary">
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% if(locals.posts && locals.posts.length > 0) { %> <%
      posts.forEach(element => { %>
      <div class="col">
        <div class="card shadow-sm">
          <img
            src="<%= element.post_image %>"
            alt="bg-image"
            width="100%"
            height="225"
            class="bd-placeholder-img card-img-top"
            aria-label="Placeholder: Thumbnail"
            preserveAspectRatio="xMidYMid slice"
            role="img"
          />
          <div class="card-body">
            <div class="d-flex align-items-center mb-3">
              <img
                src="<%= element.author_image_url %>"
                class="rounded-circle me-2"
                width="40"
                height="40"
                alt="profile-img"
              />
              <div>
                <h6 class="mb-0 fw-semibold"><%= element.author_name %></h6>
                <small class="text-muted"><%= element.creation_date %></small>
              </div>
            </div>
            <h5 class="card-title"><%= element.post_title %></h5>
            <p class="card-text description-text">
              <%= element.post_description %>
            </p>
            <div class="d-flex justify-content-end align-items-center">
              <div class="btn-group">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  fill="blue"
                  class="bi bi-pencil-square me-4"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"
                  />
                  <path
                    fill-rule="evenodd"
                    d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"
                  />
                </svg>

                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  fill="red"
                  class="bi bi-trash3 me-4"
                  viewBox="0 0 16 16"
                  onclick="deleteItem('<%= element.id %>');"
                  style="cursor: pointer; pointer-events: auto"
                >
                  <path
                    d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5"
                  />
                </svg>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% }); %> <% }else{ %>
      <p>No posts found</p>
      <% } %>
    </div>
  </div>
  <script>
    function deleteItem(id) {
      console.log("Inside");
      fetch(`/post?id=${id}`, {
        method: "DELETE",
        body: {
          id: id,
        },
      })
        .then((response) => {
          if (response.ok) {
            location.reload();
          }
        })
        .catch((error) => {
          console.error("Error:", error);
        });
    }
  </script>
</div>
